/*
 * Globals
 */

$black: rgba(0, 0, 0, 1);
$white50: transparentize($black, 0.5);
$white90: transparentize($black, 0.9);

$get-started-color: #fff;
$get-started-background: $mule-aqua;
$get-started-border: rgba(0, 0, 0, 0.1);

/* Links */
a,
a:focus,
a:hover {
  color: white;
}

html,
body {
  height: 100%;
  background-color: #333;
  overflow-x: hidden;
  overflow-y: scroll;

}
body {
  color: #fff;
  text-align: center;
}

.site-wrapper {
  display: table;
  width: 100%;
  height: 85%; /* For at least Firefox */
  min-height: 85%;
  background-image: url(<%= asset_path 'bear.png' %>);
}
.site-wrapper-inner {
  display: table-cell;
  vertical-align: top;
}
.cover-container {
  margin-right: auto;
  margin-left: auto;
}

.inner {
  padding: 30px;
}

#logo {
}


/*
 * Header Nav stuff
 */
.masthead-brand {
  margin-top: 10px;
  margin-bottom: 10px;
}

.masthead-nav > li {
  display: inline-block;
}
.masthead-nav > li + li {
  margin-left: 20px;
}
.masthead-nav > li > a {
  padding-right: 0;
  padding-left: 0;
  font-size: 16px;
  font-weight: bold;
  color: #fff; /* IE8 proofing */
  color: rgba(255,255,255,.75);
  text-shadow: 0 1px 3px $white50;
  border-bottom: 2px solid transparent;
}

@media (min-width: 768px) {
  .masthead-brand {
    float: left;
  }
  .masthead-nav {
    float: right;
  }
}

// END HEADER NAV

/*
 * Cover Logo and Form
 */

.cover {
  padding: 0 20px;
  text-shadow: 0 1px 3px $white50;
}

.cover #logo {
  margin-left: auto;
  margin-right: auto;
  display: inline-block;
}

.cover-heading {
  font-size: 4.5em;
}

.cover form {
  max-width: 450px;
  margin-left: auto;
  margin-right: auto;

  .field {
    margin-bottom: 0.75em;
  }

  .btn-get-started, .btn-get-started:hover, .btn-get-started:active {
    @extend .btn-block;
    @extend .btn-lg;
    @include button-variant($get-started-color, $get-started-background, $get-started-border);
    text-shadow: none;
  }

  input[type="text"], input[type="email"] {
    color: $white50;
    height: 48px;
    text-decoration: none solid $white50;
    width: 100%;
    background: rgba(255, 255, 255, 0.901961) none repeat scroll 0% 0% / auto padding-box border-box;
    border: 1px solid rgba(255, 255, 255, 0);
    border-radius: 6px;
    font: normal normal normal 18px/normal 'Helvetica Neue', Helvetica, Arial, 'Lucida Grande', sans-serif;
    margin: 0px;
    outline: $white50 none 0px;
    padding: 12px;
  }

} // END FORM


// Below fold highlights

.highlights {
  background: white;
  border-top: 5px solid $mule-aqua;
  color: black;

  img {
    margin-left: auto;
    margin-right: auto;
  }
  h1, h2, h3 {
    font-weight: 100;
  }
}

div[class^="highlight"] {
}

.hightlight-trust {}
.hightlight-trans {}
.hightlight-control {}


// Footer
div.footer {
  background: white;

  hr {
    border-top: 3px solid $mule-aqua;
    margin-left: 20%;
    margin-right: 20%;
  }
}
h1.footer {
  color: black;
  margin: 1em;
}

.foot-space {
  background: $mule-aqua;
  height: 50px;
  width: 100%;
}

/*
 * Affix and center
 */

@media (min-width: 768px) {
  /* Pull out the header and footer */
  .masthead {
    position: fixed;
    top: 0;
  }
  /* Start the vertical centering */
  .site-wrapper-inner {
    vertical-align: middle;
  }
  /* Handle the widths */
  .masthead,
  .cover-container {
    width: 100%; /* Must be percentage or pixels for horizontal alignment */
  }
}

@media (min-width: 992px) {
  .masthead,
  .cover-container {
    width: 800px;
  }
}
